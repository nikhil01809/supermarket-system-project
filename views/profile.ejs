<% layout('layout/boiler_plate') %>

<div class="container">
    <h1 class="text-center">PROFILE</h1>
    <div class="profile-info">
        <ul>
            <li>
                <span class="info-label">Name:</span> <%= currentUser.name.toUpperCase() %>
            </li>
            <li>
                <span class="info-label">Type of user:</span> <%= currentUser.user_type.toUpperCase() %>
            </li>
            <li>
                <span class="info-label">Username:</span> <%= currentUser.username %>
            </li>
            <li>
                <span class="info-label">Joining Date:</span> <%= currentUser.joining_date %>
            </li>
        </ul>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    .profile-info {
        border-top: 2px solid #ccc;
        padding-top: 20px;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    li {
        margin-bottom: 10px;
    }

    .info-label {
        font-weight: bold;
        margin-right: 10px;
    }
</style>
